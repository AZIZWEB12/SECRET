rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow user to read and update their own profile, admins can read all profiles.
    match /profiles/{userId} {
      allow get, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow list: if get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow user to create and read their own quiz attempts.
    match /quizAttempts/{attemptId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.size() > 0 && request.query.where[0][1] == 'userId' && request.query.where[0][2] == request.auth.uid;
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Admins can manage all content. Users can read non-premium content, or premium content if they are premium users.
    match /{collection}/{docId} {
      // General read access
      allow read: if request.auth != null && (
                    !resource.data.premiumOnly || 
                    get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isPremium == true
                  );

      // Admin write access for specific collections
      allow write: if get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin'
                   && collection in ['quizzes', 'pdfs', 'videos', 'formations'];
    }

     // Admins can manage payments
    match /payments/{paymentId} {
        allow read, list, write: if get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
