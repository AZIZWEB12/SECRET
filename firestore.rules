rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profiles Collection
    match /profiles/{userId} {
      // Any authenticated user can create their own profile document
      allow create: if isOwner(userId);
      // An authenticated user can only read their own profile
      allow get: if isOwner(userId);
      // An authenticated user can only update their own profile
      allow update: if isOwner(userId);
      // Only admins can list all profiles
      allow list: if request.auth.token.role == 'admin';
    }

    // QuizAttempts Collection
    match /quizAttempts/{attemptId} {
        // Any authenticated user can create their own attempt
        allow create: if request.auth.uid == request.resource.data.userId;
        // Users can only read their own attempts
        allow read: if resource.data.userId == request.auth.uid;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
