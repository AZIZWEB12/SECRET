rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    match /profiles/{userId} {
      // Allow users to get and update their own profile
      allow get, update: if request.auth != null && request.auth.uid == userId;

      // Allow admin to read all profiles
      allow list, get: if request.auth != null && isAdmin();

      // Allow anyone to create their own profile (signup)
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /quizAttempts/{attemptId} {
      // Users can create their own attempts
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can only read their own attempts
      allow get, list: if request.auth != null && request.resource.data.userId == request.auth.uid || (exists(/databases/$(database)/documents/quizAttempts/$(attemptId)) && resource.data.userId == request.auth.uid);
    }

    match /payments/{paymentId} {
        // Admins can read all payments
        allow get, list: if request.auth != null && isAdmin();
    }
  }
}
