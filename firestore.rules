rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, update: if isUser(userId) || isAdmin();
      allow create: if isAuth(); // Allow any authenticated user to create their profile
      allow list: if isAdmin(); // Only admins can list all profiles
    }

    match /quizzes/{quizId} {
      allow read: if isAuth(); // Any authenticated user can read a quiz
      allow list, write, create, delete, update: if isAdmin(); // Only admins can manage quizzes
    }

    match /attempts/{attemptId} {
      // Users can create their own attempts, and read them afterwards. Admins can read any attempt.
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read, list: if (isAuth() && request.auth.uid == resource.data.userId) || isAdmin();
    }
    
    match /documents/{docId} {
      allow read: if isAuth();
      allow list, write, create, delete, update: if isAdmin();
    }

    match /formations/{formationId} {
      allow read: if isAuth();
      allow list, write, create, delete, update: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, update, delete: if isUser(resource.data.userId);
        allow create, list: if isAdmin();
    }
  }
}
