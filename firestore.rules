rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read their own profile
    match /profiles/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admins to read and write all profiles
    match /profiles/{userId} {
       allow list, write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow users to read their own quiz attempts
    match /quizAttempts/{attemptId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Allow admins to read all quiz attempts
     match /quizAttempts/{attemptId} {
      allow list, read: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow admins to read and write payments
    match /payments/{paymentId} {
        allow read, list, write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
